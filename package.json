{
  "name": "@oada/formats",
  "version": "1.0.0",
  "description": "Reworked OADA formats",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "prebuild": "ts-node src/schemas/compile.ts",
    "build": "tsc",
    "pedeploy": "npm run build",
    "deploy": "gh-pages -d lib/schemas -s **/*.schema.json",
    "prepare": "npm run build",
    "test": "c8 mocha",
    "coverage": "c8 report --reporter text-lcov | coveralls"
  },
  "mocha": {
    "timeout": 4000,
    "spec": "src/**/*.spec.ts",
    "extension": [
      "ts"
    ],
    "require": "ts-node/register"
  },
  "repository": "https://github.com/OADA/formats",
  "author": "Alex Layton <alex@layton.in>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "ajv": "^6.12.0",
    "axios": "^0.19.2",
    "glob": "^7.1.6",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^8.0.0",
    "@types/chai": "^4.2.11",
    "@types/json-schema": "^7.0.4",
    "@types/mkdirp": "^1.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "c8": "^7.1.0",
    "chai": "^4.2.0",
    "chai-json-schema-ajv": "^5.0.0",
    "coveralls": "^3.0.13",
    "gh-pages": "^2.2.0",
    "json-schema-traverse": "^0.4.1",
    "jsonschema8": "^1.1.0",
    "mocha": "^7.1.1",
    "prettier-standard": "^16.2.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  }
}
