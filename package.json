{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "lerna run build",
    "build": "bundle exec jekyll build",
    "lint": "spectral lint packages/formats/lib/\\*\\*/*.schema.json",
    "test": "ava"
  },
  "ava": {
    "files": [
      "**/*.spec.ts",
      "!**/lib"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@stoplight/spectral": "^5.4.0",
    "ava": "^3.8.2",
    "cpy-cli": "^3.1.1",
    "lerna": "^3.22.0"
  },
  "name": "oada-formats-v2"
}
