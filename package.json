{
  "private": true,
  "workspaces": [
    "schemas",
    "packages/*"
  ],
  "scripts": {
    "g:tsc": "cd $INIT_CWD && tsc -b",
    "g:ts-node": "cd $INIT_CWD && ts-node",
    "prepare": "yarn build",
    "build": "bundle exec jekyll build",
    "clean": "lerna run clean",
    "lint": "spectral lint packages/formats/src/schemas/\\*\\*/*.schema.json",
    "test": "lerna run test",
    "test:dev": "lerna run clean && lerna run build && lerna run test"
  },
  "devDependencies": {
    "@stoplight/spectral": "^5.9.2",
    "@tsconfig/node12": "^1.0.9",
    "@types/bluebird": "^3.5.36",
    "@types/istanbul-lib-coverage": "^2.0.3",
    "@types/istanbul-lib-instrument": "^1.7.4",
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/istanbul-reports": "^3.0.1",
    "@types/node": "^12.20.19",
    "@yarnpkg/sdks": "^2.4.1-rc.4",
    "ava": "^3.15.0",
    "c8": "^7.8.0",
    "coveralls": "^3.1.1",
    "istanbul-lib-coverage": "^3.0.0",
    "istanbul-lib-instrument": "^4.0.3",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.0.2",
    "lerna": "^4.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "name": "@oada/formats-monorepo",
  "packageManager": "yarn@3.0.1"
}
