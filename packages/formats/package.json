{
  "name": "@oada/formats",
  "version": "1.2.1",
  "description": "Reworked OADA formats",
  "keywords": [
    "oada",
    "trellis",
    "JSON Schema",
    "schema"
  ],
  "author": "Alex Layton <alex@layton.in>",
  "homepage": "https://github.com/OADA/formats/packages/formats",
  "repository": {
    "type": "git",
    "url": "https://github.com/OADA/formats.git",
    "directory": "packages/formats"
  },
  "bugs": {
    "url": "https://github.com/OADA/formats/labels/@oada/formats"
  },
  "license": "MIT",
  "private": false,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "src",
    "lib",
    "tsconfig.json",
    ".nycrc.json"
  ],
  "scripts": {
    "buildschemas": "node ./lib/schemas/compile.js",
    "postbuild": "npm run buildschemas",
    "build": "tsc -b tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean",
    "prepare": "npm run build",
    "coverage": "nyc report",
    "coveralls": "nyc report --reporter text-lcov | coveralls",
    "test": "ava"
  },
  "ava": {
    "files": [
      "**/*.spec.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.1",
    "ajv": "^7.0.3",
    "axios": "^0.21.1",
    "glob": "^7.1.6"
  }
}
