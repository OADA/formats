{
  "name": "@oada/formats",
  "version": "2.0.0",
  "description": "Reworked OADA formats",
  "keywords": [
    "oada",
    "trellis",
    "JSON Schema",
    "schema"
  ],
  "author": "Alex Layton <alex@layton.in>",
  "homepage": "https://github.com/OADA/formats/packages/formats",
  "repository": {
    "type": "git",
    "url": "https://github.com/OADA/formats.git",
    "directory": "packages/formats"
  },
  "bugs": {
    "url": "https://github.com/OADA/formats/labels/@oada/formats"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "directories": {
    "lib": "dist"
  },
  "files": [
    "src",
    "dist",
    "tsconfig.json"
  ],
  "scripts": {
    "buildschemas": "node ./dist/schemas/compile.js",
    "build": "yarn g:tsc && yarn run buildschemas",
    "clean": "yarn g:tsc --clean; rm -rf dist",
    "prepare": "npm run build",
    "coverage": "nyc report",
    "coveralls": "nyc report --reporter text-lcov | coveralls",
    "test": "ava"
  },
  "ava": {
    "files": [
      "**/*.spec.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.9",
    "@oada/media-types": "^1.8.1",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "ajv-formats-draft2019": "^1.6.1",
    "axios": "^0.26.1",
    "glob": "^7.2.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/glob": "^7.2.0",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^14.18.12",
    "@types/yargs": "^17.0.10",
    "ava": "^3.15.0",
    "debug": "^4.3.4",
    "jsonschema8": "^1.1.1",
    "mkdirp": "^1.0.4",
    "yargs": "^17.4.1"
  }
}
