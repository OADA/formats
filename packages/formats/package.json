{
  "name": "@oada/formats",
  "version": "1.2.0-beta",
  "description": "Reworked OADA formats",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "src",
    "lib",
    "tsconfig.json",
    ".nycrc.json"
  ],
  "scripts": {
    "buildschemas": "node ./lib/schemas/compile.js",
    "postbuild": "npm run buildschemas",
    "clean": "tsc -b tsconfig.build.json --clean",
    "build": "tsc -b tsconfig.build.json",
    "clean": "tsc -b tsconfig.build.json --clean",
    "prepare": "npm run build",
    "coverage": "nyc report",
    "coveralls": "nyc report --reporter text-lcov | coveralls",
    "test": "ava"
  },
  "ava": {
    "files": [
      "**/*.spec.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": "https://github.com/OADA/formats",
  "author": "Alex Layton <alex@layton.in>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.1",
    "@stoplight/spectral": "^5.4.0",
    "ajv": "^7.0.3",
    "ava": "^3.8.2",
    "axios": "^0.21.1",
    "glob": "^7.1.6",
    "jsonschema8": "^1.1.0",
    "lerna": "^3.22.0",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1"
  }
}
