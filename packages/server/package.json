{
  "name": "@oada/formats-server",
  "version": "2.0.0",
  "description": "OADA formats server plugins",
  "keywords": [
    "oada",
    "trellis",
    "JSON Schema",
    "schema"
  ],
  "author": "Alex Layton <alex@layton.in>",
  "homepage": "https://github.com/OADA/formats/packages/formats-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/OADA/formats.git",
    "directory": "packages/formats-server"
  },
  "bugs": {
    "url": "https://github.com/OADA/formats/labels/@oada/formats-server"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "directories": {
    "lib": "dist"
  },
  "files": [
    "src",
    "dist",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "yarn g:tsc",
    "clean": "yarn g:tsc --clean",
    "prepare": "npm run build",
    "test": "ava"
  },
  "ava": {
    "files": [
      "**/*.spec.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@oada/media-types": "^2.0.0",
    "content-type": "^1.0.4"
  },
  "peerDependencies": {
    "@oada/formats": "^1.3.0",
    "@types/express": "4",
    "fastify": "3"
  },
  "peerDependenciesMeta": {
    "@oada/formats": {
      "optional": true
    },
    "@types/express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/content-type": "^1.1.5",
    "@types/express": "^4.17.13",
    "ava": "^3.15.0",
    "fastify": "^3.28.0"
  }
}
