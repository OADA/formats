{
  "name": "@oada/formats-server",
  "version": "3.5.2",
  "description": "OADA formats server plugins",
  "keywords": [
    "oada",
    "trellis",
    "JSON Schema",
    "schema"
  ],
  "author": "Alex Layton <alex@layton.in>",
  "homepage": "https://github.com/OADA/formats/packages/formats-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/OADA/formats.git",
    "directory": "packages/formats-server"
  },
  "bugs": {
    "url": "https://github.com/OADA/formats/labels/@oada/formats-server"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "directories": {
    "lib": "dist"
  },
  "files": [
    "src",
    "dist",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "yarn g:tsc",
    "clean": "yarn g:tsc --clean",
    "prepare": "npm run build",
    "test": "c8 ava",
    "test:debug": "ava -T 60m -svc 1 --no-worker-threads"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "failFast": false,
    "files": [
      "**/*.spec.ts"
    ],
    "typescript": {
      "extensions": [
        "ts",
        "cts",
        "mts"
      ],
      "rewritePaths": {
        "src/": "dist/",
        "test/": ".test/"
      },
      "compile": false
    }
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true,
    "src": "src",
    "exclude": [
      "*.d.ts",
      ".pnp.*",
      ".test"
    ]
  },
  "dependencies": {
    "@oada/media-types": "^3.0.0",
    "content-type": "^1.0.5"
  },
  "peerDependencies": {
    "@oada/formats": "^1.3.0",
    "@types/express": "4",
    "fastify": "3"
  },
  "peerDependenciesMeta": {
    "@oada/formats": {
      "optional": true
    },
    "@types/express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    }
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@types/content-type": "^1.1.5",
    "@types/express": "^4.17.17",
    "ava": "5.2.0",
    "c8": "^7.13.0",
    "fastify": "^4.17.0"
  }
}
