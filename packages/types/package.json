{
  "name": "@oada/types",
  "version": "1.2.0-beta",
  "description": "TypeScript type definitions for OADA formats",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean && cd src && ts-node --files compile.ts",
    "clean": "tsc -b tsconfig.build.json --clean",
    "build": "tsc -b tsconfig.build.json",
    "postbuild": "cpy '**/*.js' ../ --cwd=src --parents",
    "prestart": "npm run build",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "test": "ava"
  },
  "ava": {
    "files": [
      "**/*.spec.js"
    ]
  },
  "files": [
    "**/*.d.ts",
    "**/*.ts.map",
    "**/*.js",
    "**/*.js.map",
    "tsconfig.json"
  ],
  "repository": "https://github.com/OADA/types",
  "author": "Alex Layton <alex@layton.in>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "ajv": "^6.12.2",
    "json-schema-merge-allof": "^0.7.0",
    "lodash.omit": "^4.5.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@oada/formats": "^1.2.0-beta"
  }
}
