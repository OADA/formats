{
  "name": "@oada/types",
  "version": "1.8.0",
  "description": "TypeScript type definitions for OADA formats",
  "keywords": [
    "oada",
    "trellis"
  ],
  "author": "Alex Layton <alex@layton.in>",
  "homepage": "https://github.com/OADA/formats/packages/types",
  "repository": {
    "type": "git",
    "url": "https://github.com/OADA/formats.git",
    "directory": "packages/types"
  },
  "bugs": {
    "url": "https://github.com/OADA/formats/labels/@oada/types"
  },
  "license": "MIT",
  "main": "index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "clean": "yarn g:tsc tsconfig.build.json --clean",
    "build": "cd src && yarn g:ts-node --files compile.ts && cd .. && yarn g:tsc tsconfig.build.json && cpy '**/*.js' ../ --cwd=src --parents",
    "prestart": "npm run build",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "test": "ava"
  },
  "ava": {
    "files": [
      "**/*.spec.js"
    ]
  },
  "files": [
    "**/*.d.ts",
    "**/*.ts.map",
    "**/*.js",
    "**/*.js.map",
    "tsconfig.json"
  ],
  "dependencies": {
    "ajv": "^8.8.2",
    "ajv-formats": "^2.1.1",
    "ajv-formats-draft2019": "^1.6.1"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.9",
    "@oada/formats": "^1.8.0",
    "@types/bluebird": "^3.5.36",
    "@types/json-schema-merge-allof": "^0.6.1",
    "@types/lodash.omit": "^4.5.6",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^12.20.38",
    "ava": "^3.15.0",
    "bluebird": "^3.7.2",
    "cpy-cli": "^3.1.1",
    "json-schema-merge-allof": "^0.8.1",
    "json-schema-to-typescript": "https://github.com/awlayton/json-schema-to-typescript.git#9b79fadf33df6e5d4b2947305d8c939ae2c6180a",
    "jsonschema8": "^1.1.1",
    "lodash.omit": "^4.5.0",
    "mkdirp": "^1.0.4"
  }
}
