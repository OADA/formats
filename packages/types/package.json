{
  "name": "@oada/types",
  "version": "1.2.0-beta",
  "description": "TypeScript type definitions for OADA formats",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean && cd src && ts-node --files compile.ts",
    "clean": "git clean -dfx",
    "build": "tsc",
    "postbuild": "cpy '**/*.js' ../ --cwd=src --parents",
    "prestart": "npm run build",
    "prepare": "npm run build",
    "pretest": "npm run build"
  },
  "files": [
    "**/*.d.ts",
    "**/*.ts.map",
    "**/*.js",
    "**/*.js.map",
    "tsconfig.json"
  ],
  "prettier": {
    "singleQuote": true,
    "quoteProps": "consistent"
  },
  "mocha": {
    "spec": "*.spec.ts",
    "extension": [
      "ts"
    ],
    "require": "ts-node/register"
  },
  "repository": "https://github.com/OADA/types",
  "author": "Alex Layton <alex@layton.in>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@oada/formats": "^1.2.0-beta",
    "@types/json-schema-merge-allof": "^0.6.0",
    "@types/lodash.omit": "^4.5.6",
    "ajv": "^6.12.2",
    "json-schema-merge-allof": "^0.7.0",
    "lodash.omit": "^4.5.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.1",
    "@types/bluebird": "^3.5.32",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^14.6.0",
    "@types/prettier": "^2.0.0",
    "ajv-pack": "^0.3.1",
    "cpy-cli": "^3.1.1",
    "json-schema-to-typescript": "https://github.com/awlayton/json-schema-to-typescript.git#custom-rules",
    "jsonschema8": "^1.1.0",
    "mkdirp": "^1.0.4",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0"
  }
}
