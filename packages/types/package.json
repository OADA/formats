{
  "name": "@oada/types",
  "version": "1.0.8",
  "description": "TypeScript type definitions for OADA formats",
  "main": "index.ts",
  "scripts": {
    "prebuild": "ts-node --files compile.ts",
    "build": "tsc",
    "prestart": "npm run build",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "test": "mocha"
  },
  "files": [
    "**/*.ts",
    "**/*.ts.map",
    "**/*.js",
    "**/*.js.map",
    "tsconfig.json"
  ],
  "mocha": {
    "spec": "*.spec.ts",
    "extension": [
      "ts"
    ],
    "require": "ts-node/register"
  },
  "repository": "https://github.com/OADA/types",
  "author": "Alex Layton <alex@layton.in>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@oada/formats": "1.1.2",
    "ajv": "^6.12.2",
    "typescript": "^3.9.2"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.1",
    "@types/chai": "^4.2.11",
    "@types/mkdirp": "^1.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.1",
    "@types/prettier": "^2.0.0",
    "ajv-pack": "^0.3.1",
    "chai": "^4.2.0",
    "json-schema-to-typescript": "^9.1.0",
    "jsonschema8": "^1.1.0",
    "mkdirp": "^1.0.4",
    "mocha": "^7.1.2",
    "prettier-standard": "^16.3.0",
    "ts-node": "^8.10.1"
  }
}
