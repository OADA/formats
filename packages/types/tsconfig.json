{
  "compilerOptions": {
    "target": "ES2019",
    "strict": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "rootDir": "src",
    "outDir": "./",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "lib",
    "test",
    "types",
    "oada/as-harvested/yield-moisture-dataset/*",
    "oada/tiled-maps/dry-yield-map/*",
    "oada/tiled-maps/moisture-map/*"
  ]
}
